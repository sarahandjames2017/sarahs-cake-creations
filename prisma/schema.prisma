generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  facebookId String   @unique
  name       String
  email      String?
  isAdmin    Boolean  @default(false)
  createdAt  DateTime @default(now())
}
